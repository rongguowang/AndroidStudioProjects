<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="addShoppingAddressLayoutStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <style name="addShoppingAddressPromptedStyle">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/common_text_black_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="addShoppingAddressStyle">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/common_text_black_gray</item>
        <item name="android:textColorHint">@color/common_text_hint_gray</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">27.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="addShoppingAddressIntervalStyle">
        <item name="android:background">@color/common_line_gray</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <style name="common_text">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/common_text_black_gray</item>
        <item name="android:gravity">center|left</item>
    </style>
</resources>
